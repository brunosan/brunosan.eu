			<h1 id="firstHeading" class="firstHeading"><span dir="auto">Microcrédito</span></h1>
			<!-- /firstHeading -->
			<!-- bodyContent -->
			<div id="bodyContent">
								<!-- tagline -->
				<div id="siteSub">De Wikipedia, la enciclopedia libre</div>
				<!-- /tagline -->
								<!-- subtitle -->
				<div id="contentSub"></div>
