  // wait for Attacklab.wmd.editor to exist, then use it
  function wait_for_wmd() {
    if (Attacklab.wmd && Attacklab.wmd.editor) {
      // add WMD editor capabilities to the *_content textarea
      var textarea = $('textarea[id$="_content"]')[0];
      if (textarea){
        new Attacklab.wmd.editor(textarea);
      }
    } else {
      setTimeout(wait_for_wmd, 500);
    }
  }

  wait_for_wmd();
</script>
