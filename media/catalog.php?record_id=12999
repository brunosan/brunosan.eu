function RightslinkPopUp()
{
var url = "https://s100.copyright.com/AppDispatchServlet";
var location = url
+ "?publisherName=" + escape('NAP')

+ "&imprint=" + escape('NAP')
//-or-
//+ "&imprint=" + escape('JHP')

+ "&publication=" + escape('book')
+ "&title=" + escape('Rising Above the Gathering Storm, Revisited:  Rapidly Approaching Category 5')
