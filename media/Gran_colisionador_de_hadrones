						<!-- firstHeading -->
			<h1 id="firstHeading" class="firstHeading"><span dir="auto">Gran colisionador de hadrones</span></h1>
			<!-- /firstHeading -->
			<!-- bodyContent -->
			<div id="bodyContent">
								<!-- tagline -->
				<div id="siteSub">De Wikipedia, la enciclopedia libre</div>
