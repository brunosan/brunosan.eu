<script type="text/javascript">
  function play_video(title){
    // Así logramos que no se haga doble o triple llamada a la publicidad
    $("#video_multimedia_container").html("<div id=\"video_multimedia_container\"></div>");

    $.ajax({
      url: '/videos/publicidad_mediateca_seccion',
      data: "width=284&height=212&name=video_multimedia&seccion=10000",
      success: function(data) {
        $('#video_multimedia_container').html(data);
        play_video_video_multimedia('video_multimedia_container', title);
        play_video_video_multimedia('video_multimedia_container', title);
        }
      });
    }
</script>
                          
