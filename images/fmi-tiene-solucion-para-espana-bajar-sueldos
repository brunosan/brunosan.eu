			function formCheck_B() 
			{
					function replacechars(entry) 
					{
						out = " "; // reemplazar la letra a
						add = "+"; // por la letra z
						
						temp = entry;
						
						pos=temp.indexOf(out);
						
						while (pos>1) 		
						{
							if (pos>1)
							{
								temp = "" + (temp.substring(0, pos) + add + temp.substring((pos+out.length), temp.length));
							}
							
							pos=temp.indexOf(out);
						}
						
						return temp;
					}
					
					document.form8.action="buscar/"+replacechars(document.form8.texto_buscar.value);
					document.form8.submit();
			}
